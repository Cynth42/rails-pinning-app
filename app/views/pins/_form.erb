    <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
    <ul>
      <% @errors.full_messages.each do |msg| %>
        <li><%= msg%></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@pin, multipart: true) do |f| %>
<div class="containers">
<div class="col-xs-12 form-group">                
<label for="pin_title">Title</label>
  <%= f.text_field :title, :class => 'form-control' %> 
 </div> 

<div class="col-xs-6 form-group"> 
<label for="pin_category_id">Category</label> 
  <%= f.collection_select(:category_id, Category.all, :id, :name, :class => 'form-control') %> 
</div>

<div class="col-xs-12 form-group"> 
<label for="slug">Slug</label> 
  <%= f.search_field :slug, placeholder: 'my-title', :class => 'form-control' %> 
 </div>
 
<div class="col-xs-12 form-group"> 
<label for="url">Url</label> 
  <%= f.url_field :url, placeholder: 'http://example.com', :class => 'form-control' %> 
</div>
 
<div class="col-xs-12 form-group">  
<label for="text">Text</label> 
  <%= f.text_area :text, placeholder: 'description', :class => 'form-control'%> 
</div> 

<div class="col-xs-6 form-group">
  <label for="pin_image">Image</label>
  <%= f.file_field :image  %>
</div>

<div class="col-xs-12 form-group"> 
  <%= f.submit nil, :class => 'btn btn-primary btn-block' %>
<% end %>
</div>
</div>
