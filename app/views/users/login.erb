<h1>Log in</h1>
<% if @errors.present? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h2><%= @errors %></h2>
    </div>
  </div>
<% end %> 
<hr/>
<%= form_tag( "/login" ) do  %>
<div class="field ">
 <%= label_tag :email %><br>   
 <%= email_field_tag :email %>
</div>
<div class="field">
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
 </div>
 <div class="actions">   
 <%= submit_tag "Log in", class: "btn btn-primary" %>
 </div>
<% end %>
<h4><strong> If You Don't have an Account, Please Sign Up Below To Create One.  Thank you!</strong></h4>
<%= link_to 'Sign Up', signup_path %>

 

