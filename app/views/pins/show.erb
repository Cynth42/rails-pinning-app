<div class="header">
   <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>      
  </div>
<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
<div class="image">
  <% if @pin.image.exists?(:medium) %>
    <%= image_tag @pin.image.url(:medium), class: "img-responsive"%>
    <% else %>
    <%= image_tag @pin.image.url(:thumb), class: "img-responsive" %>
    <% end %>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}", @pin.url, html_options = {target: "_blank", class: "url"}%>
  </p>
</div>
<br/>
<a href="/">
<i class="fa fa-arrow-left"></i>
  Back to Home
</a>
