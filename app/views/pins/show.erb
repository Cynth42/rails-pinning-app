<div class="header">
   <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>      
  </div>
<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
<div class="image">
  <% if @pin.image.exists?(:medium) %>
    <%= image_tag @pin.image.url(:medium)%>
    <% else %>
    <%= image_tag @pin.image.url(:thumb)%>
    <% end %>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
      <%= link_to "#{@pin.url}", @pin.url, html_options = {target: "_blank", class: "url"}%>
  </p>
  <br/>
    <%= render partial: "shared/repin_form", locals: {pin: @pin} %>  
  <br/>
 <hr/>
 
 <h4>This pin has been <i class="fa fa-heart"></i> by:</h4>
    <% if @users %>
  <% @users.each do |user| %>
    <h5><%= user.first_name %> <%= user.last_name %></h5>
  <% end %>
<% else %>
  <h5>No one clicked the repin button!</h5>
<% end %>
<br/>
<hr/> 
   
<a href="/">
<i class="fa fa-hand-o-left"></i>
  Back to Home
</a>
<a href= <%= "#{edit_pin_path(@pin)}" %> >
  <i class="fa fa-hand-o-right"></i>
  Edit Pin
</a> |
<a href= <%= "#{new_pin_path}" %> >
  <i class="fa fa-hand-o-right"></i>
  Create a pin
</a> 