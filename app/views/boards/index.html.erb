<div class="header">
  <h1>
  <i class="fa fa-graduation-cap" aria-hidden="true"></i>
    Names of All Pinnable Boards And Their Users</h1>
</div>

<div class="panel">
   <div class="panel-body">
	  <table class="table table-striped table-bordered">
          <thead>
            <tr>
               <th>Board Names</th>
               <th>Users</th>
               <th colspan="3"></th>
             </tr>
          </thead>

        <tbody>
           <% @boards.each do |board| %>
          <tr>
            <td><%= board.name %></td>
            <td><%= board.user.full_name%></td>
            <td><%= link_to 'Show', board %></td>
            <td><%= link_to 'Edit', edit_board_path(board) %></td>
            <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
    </tbody>
    </table>
   </div>
</div>

<br>

<%= link_to 'New Board', new_board_path, class: "btn btn-default" %>
